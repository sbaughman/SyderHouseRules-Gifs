<div>
  <img src="<%= gif.url %>" class="img-responsive">
  <h5>Image URL:</h5>
  <p><%= gif.url %></p>
  <h5>Uploaded By:</h5>
  <p><%= gif.user.username %></p>
  <h5>Uploaded At:</h5>
  <p><%= gif.created_at %></p>
</div>
<% if current_user %>
  <div id="voting" class="pull-right">
    <div id="vote-count">
      <p><%= gif.votes.count %></p>
    </div>
    <div id="vote-arrows">
      <%= link_to (image_tag("up-arrow", class: "vote-arrow", id: "up-arrow")),
      votes_path(:votes => { :gif => gif, :vote_type => "upvote" }) %>
      <%= link_to (image_tag("down-arrow", class: "vote-arrow", id: "down-arrow")),
      votes_path(:votes => { :gif => gif, :vote_type => "downvote"}) %>
    </div>
  </div>
<% end %>
